# no annoying audible bell, please
vbell on

# detach on hangup
autodetach on

# I know about screen. I don't need to see it every time I start the program.
# (Which is, admittedly, rarely.)
startup_message off

nonblock on

defscrollback 5000

bind ^k
bind ^\
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history

#caption always "%3n %t%? @%u%?%? [%h]%?%=%c"
caption always "%?%F%{-b bc}%:%{-b bb}%?%C|%D|%M %d|%H%?%F%{+u wb}%? %L=%-Lw%45>%{+b by}%n%f* %t%{-}%+Lw%-0<"

termcapinfo xterm*|Eterm|mlterm 'hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007'
defhstatus "screen ^E (^Et) | $USER@^EH"
hardstatus alwayslastline "%{+b kr}host: %{kw}%H%{kg} %c - %D %d.%m.%Y %{kr}(load: %l) %-26=%1`"

#hardstatus alwayslastline "%{=b}%{G} Screen(s): %{b}%w %=%{kG}%C%A %D, %M/%d/%Y "

# Log new screen windows in utmp.
deflogin on

# Window numbering starts at 1, not 0.
bind c screen 1
bind 0 select 10

#select 1
# Use the function keys to switch among windows.
bindkey -k k1 select 1
bindkey -k k2 select 2
bindkey -k k3 select 3
bindkey -k k4 select 4
bindkey -k k5 select 5
bindkey -k k6 select 6

## Keybindings ##

# bind F7 to detach screen session from this terminal
# bind F8 to kill current screen window.
# bind F9 to create a new screen
# bind F10 to rename current screen window
# bind F11 to move to previous window
# bind F12 to move to next window
bindkey -k k9 detach
bindkey -k k8 kill
#bindkey -k k9 screen
#bindkey -k k; title
bindkey -k F1 prev
bindkey -k F2 next


